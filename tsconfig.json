{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": [
      "es5",
      "es6",
      "ESNext",
      "dom"
    ],
    "typeRoots": [
      "./types/*.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "core/*": ["./src/core/*"],
      // "dependency/*": ["./src/dependency/*"],
      "infrastructure/*": ["./src/infrastructure/*"],
      "ui/*": ["./src/ui/*"],
      "@/*": ["./src/*"],
      // "config/*": ["./test/config/*"],
      // "*": [
        // "./@types/*"
      // ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}
